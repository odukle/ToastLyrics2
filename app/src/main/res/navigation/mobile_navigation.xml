<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.odukle.toastlyrics.ui.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_now_playing"
        android:name="com.odukle.toastlyrics.ui.now_playing.NowPlayingFragment"
        android:label="Now Playing"
        tools:layout="@layout/fragment_now_playing" />

    <fragment
        android:id="@+id/navigation_sync"
        android:name="com.odukle.toastlyrics.ui.sync.SyncFragment"
        android:label="Sync"
        tools:layout="@layout/fragment_sync" />
